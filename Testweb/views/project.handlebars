{{#section 'css'}}
<link rel="stylesheet" href="stylesheets/project.css"> {{/section}}

<!-- header -->
<header class="container-fluid">
    <div class="row">
        <div class="col-md-offset-3 col-md-6 text-center">
            <a href="/"><img class="cucumber-logo text-center" src="images/logo_en.png" width="600"></a>
        </div>
        <div class="col-md-3 text-right" id="nccu_logo">
            <img src="images/nccu_logo.jpg">
        </div>
    </div>
</header>

<section id="tool-bar">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills" role="tablist">
                    <li><a data-toggle="tab">{{user}}</a></li>
                    <li><a href="/sign_out">sign out</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="main">
    <div class="container-fluid">

        <div id="new_project" style="float:left">
            <div id="new_project-header">
                Create a new project
            </div>
            <div id="new_project-body">
                <div class="form-inline">

                    <label>Project Name</label><br>
                    <input type="text" id="project_name"><br>

                    <hr>
                    <label>Contract Name</label><br>
                    <input type="text" id="contract_name1"><br>
                    <button class="new_deploy contract1">Add another contract instance</button><br>
                </div>
                <br>
                <button id="new_project-button">Create</button>
                <button id="add_contract-button">Add more contracts</button>
            </div>
        </div>

        <div id="project_list" style="float:left">
        </div>

    </div>
    </div>
</section>

{{#section 'script'}}
<script src="javascripts/project.js"></script>
{{/section}}